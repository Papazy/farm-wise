<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Document</title>
  <script src="https://cdn.tailwindcss.com"></script> 
  @vite(['resources/css/app.css', 'resources/js/app.js'])
</head>



<body>
  @include('components/layout/partials/navbar')
  <div class="content topbar flex gap-5 justify-center items-center mt-10">
    @each(category in categories)
    @!button.simple( {
      text: category.kategori,
      isActive : category.isActive,
      path: '/shop?c='+category.path,
    })
    @end
    
  </div>
  <div class="content flex items-center justify-center gap-5 flex-wrap mt-10 ">

    @each(barang in barangs)
    @!component('components/card-simple.edge',{
      nama: barang.nama,
      filename : barang.path_gambar,
      path : barang.key,
      harga : barang.harga,
      satuan : barang.satuan
    }) 
    @end
